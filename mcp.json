{
  "filesystem": {
    "command": "npx",
    "args": ["-y", "@modelcontextprotocol/server-filesystem", "{filesystem_path}"],
    "transport": "stdio",
    "enabled": true
  },
  "duckduckgo": {
    "command": "uvx",
    "args": ["duckduckgo-mcp-server"],
    "transport": "stdio",
    "enabled": true
  },
  "fetch": {
    "command": "uvx",
    "args": ["mcp-server-fetch"],
    "transport": "stdio",
    "enabled": true
  },
  "playwright": {
    "command": "npx",
    "args": ["@playwright/mcp@latest"],
    "transport": "stdio",
    "enabled": false,
    "env": {
      "PLAYWRIGHT_HEADLESS": "true",
      "PLAYWRIGHT_TIMEOUT": "30000",
      "PLAYWRIGHT_LAUNCH_ARGS": "--disable-blink-features=AutomationControlled"
    }
  },
  "blender": {
    "command": "uvx",
    "args": ["blender-mcp"],
    "transport": "stdio",
    "enabled": false
  },
  "excel": {
    "command": "uvx",
    "args": ["excel-mcp-server", "stdio"],
    "transport": "stdio",
    "enabled": false
  },
  "sequential-thinking": {
    "command": "npx",
    "args": ["@modelcontextprotocol/server-sequential-thinking"],
    "transport": "stdio",
    "enabled": false
  },
  "win-cli": {
    "command": "npx",
    "args": ["@simonb97/server-win-cli", "--config", "./win-cli-config.json"],
    "transport": "stdio",
    "enabled": true
  },
  "mcp-telegram": {
    "command": "C:\\Users\\maks\\AppData\\Roaming\\uv\\tools\\mcp-telegram\\Scripts\\mcp-telegram.exe",
    "args": ["start"],
    "env": {
      "API_ID": "28230035",
      "API_HASH": "b8c30a2a36123d66229fdcb0f1856a06"
    },
    "transport": "stdio",
    "enabled": false
  },
  "chrome-mcp": {
    "command": "node",
    "args": [
      "C:\\Users\\user\\AppData\\Roaming\\npm\\node_modules\\mcp-chrome-bridge\\dist\\mcp\\mcp-server-stdio.js"
    ],
    "transport": "stdio",
    "enabled": false
  },
  "example-http-server": {
    "transport": "sse",
    "url": "http://localhost:3000/sse",
    "enabled": false,
    "description": "Пример конфигурации для HTTP SSE транспорта"
  },
  "example-streamable-http": {
    "transport": "streamable-http",
    "url": "https://api.example.com/mcp",
    "headers": {
      "Authorization": "Bearer YOUR_API_KEY",
      "Content-Type": "application/json"
    },
    "enabled": false,
    "description": "Пример конфигурации для Streamable HTTP транспорта с заголовками"
  },
  "local-http-mcp": {
    "transport": "sse",
    "url": "http://localhost:8080/mcp/stream",
    "enabled": false,
    "description": "Локальный HTTP MCP сервер через SSE"
  }
}
